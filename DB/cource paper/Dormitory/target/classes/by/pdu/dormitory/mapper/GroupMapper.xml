<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="by.pdu.dormitory.mapper.GroupMapper">
    <resultMap id="groupResultMap" type="by.pdu.dormitory.domain.Group">
        <id column="group_id" property="id"/>
        <result column="group_name" property="name"/>
        <collection property="faculty" javaType="by.pdu.dormitory.domain.Faculty"
                    resultMap="by.pdu.dormitory.mapper.FacultyMapper.facultyResultMap"/>
    </resultMap>
    <select id="getGroup" resultMap="groupResultMap">
        SELECT
            g.id as "group_id",
            g.name as "group_name",
            f.id as "faculty_id",
            f.name as "faculty_name"
        FROM
            GROUPS g
            LEFT JOIN FACULTY f ON f.id = g.faculty_id
        ORDER BY "group_id" ASC
    </select>

    <insert id="insertGroup">
        INSERT INTO GROUPS(NAME,faculty_id)
        VALUES(#{name},#{facultyId})
    </insert>

    <update id="updateGroup">
        UPDATE GROUPS
        SET
            NAME = #{name},
            FACULTY_ID = #{facultyId}
        WHERE
            id = #{id}
    </update>

    <delete id="deleteGroup">
        DELETE FROM GROUPS
        WHERE id = #{id}
    </delete>

</mapper>
