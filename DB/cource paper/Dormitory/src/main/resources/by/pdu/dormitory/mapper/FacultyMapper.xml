<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="by.pdu.dormitory.mapper.FacultyMapper">
    <resultMap id="facultyResultMap" type="by.pdu.dormitory.domain.Faculty">
        <id column="faculty_id" property="id"/>
        <result column="faculty_name" property="name"/>
    </resultMap>
    <select id="getFaculty" resultMap="facultyResultMap">
        SELECT
            id as "faculty_id",
            name as "faculty_name"
        FROM
            FACULTY
        ORDER BY id ASC
    </select>
    <insert id="insertFaculty">
        INSERT INTO FACULTY(NAME)
        VALUES(#{name})
    </insert>
    <update id="updateFaculty">
        UPDATE FACULTY
        SET NAME =#{name}
        WHERE id = #{id}
    </update>

    <delete id="deleteFaculty">
        DELETE FROM FACULTY
        WHERE id = #{id}
    </delete>
</mapper>
