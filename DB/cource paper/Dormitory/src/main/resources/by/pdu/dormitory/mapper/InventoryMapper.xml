<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="by.pdu.dormitory.mapper.InventoryMapper">

    <resultMap id="inventoryResultMap" type="by.pdu.dormitory.domain.Inventory">
        <id column="inventory_id" property="id"/>
        <result column="inventory_name" property="name"/>
    </resultMap>

    <select id="getInventory" resultMap="inventoryResultMap">
        SELECT
            id as "inventory_id",
            name as "inventory_name"
        FROM
            Inventory
        ORDER BY id ASC
    </select>

    <insert id="insertInventory">
        INSERT INTO INVENTORY(NAME)
        VALUES(#{name})
    </insert>

    <update id="updateInventory">
        UPDATE INVENTORY
        SET NAME =#{name}
        WHERE id = #{id}
    </update>

    <delete id="deleteInventory">
        DELETE FROM INVENTORY
        WHERE id = #{id}
    </delete>

</mapper>
