#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>
#include <iostream>
#include <fcntl.h>
#include <sys/stat.h>
using namespace std;


int main(){

    int sock, listener;
    struct sockaddr_in addr;
    listener = socket(AF_INET, SOCK_STREAM, 0);

    if(listener < 0){
        perror("socket");
        exit(1);
    }


    addr.sin_family = AF_INET;
    addr.sin_port = htons(3425);
    addr.sin_addr.s_addr = htonl(INADDR_ANY);
    if(bind(listener, (struct sockaddr *)&addr, sizeof(addr)) < 0){
        perror("bind");
        exit(2);
    }
    listen(listener, 1);

    cout << "\t\tСервер запущен и ожидает запросы...\n\n";


    while(true){
        sock = accept(listener, NULL, NULL);

        if(sock < 0){
            perror("accept");
            exit(3);
        }


        char tempFilename[255];
        char filename[255];
        recv(sock, tempFilename, sizeof(filename), 0);

        int index = 0, pos, len;
        len = pos = strlen(tempFilename)-1;
        for (int i = len; i >= 0; i--){
            if(tempFilename[i] == '/') break;
            pos = i;
        }


        for (int i = pos; i <= len; i++){
            filename[index] = tempFilename[i];
            index++;
        }
        filename[index] = '\0';

        int out = open(filename, O_WRONLY | O_CREAT, S_IWRITE | S_IREAD);


        char buf;
        int i = 1;
        __off_t sz, left;
        recv(sock, &sz, sizeof(sz), 0);
        left = sz;
        int percent = 0, percentNow;

        while (left){
            int nbytes = recv(sock, &buf, sizeof(buf), 0);
            if (nbytes == 0)
            {
                cout<<"Сессия окончена..."<<endl;
                break;
            }
            if (nbytes < 0)
            {
                cout << "Ошибка передачи... "<< endl;
                return 0;
            }
            write(out, &buf, nbytes);
            i++;
            percentNow = (int)(float(i)/float(sz)*100);
            if (percent != percentNow) {
                system("clear");
                cout << "Принято: " << percentNow << "%" << endl;
                percent = percentNow;
            }
            left--;
        }

        close(out);

        cout << "\n\nОбратная передача...\n\n";

        int b;
        i = 1;
        FILE * in = fopen(filename, "rb");
        char bufer;
        int size;
        left = sz;
        percent = 0;

        while(left) {
            b = fread(&bufer, 1, sizeof(bufer), in);
            size = ftell(in);

            percentNow = (int)(float(size)/float(sz)*100);
            if (percent != percentNow) {
                system("clear");
                cout << "Передача: " << percentNow << "%" << endl;
                percent = percentNow;
            }
            if(b != 0)
                send(sock, &bufer, b, 0);
            left--;
        }

        system("clear");

        cout << "\t\tСервер запущен и ожидает запросы...\n\n";


        close(sock);
    }

    return 0;
}
