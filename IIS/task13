;13.	Найти сумму чисел, кратных n, на отрезке от а до b.

(defglobal ?*sum* = 0)
(defglobal ?*i* = 0)

(deffunction main(?lowerBound ?upperBound ?n)
	
	(bind ?*sum* 0)
	
	(bind ?*i* ?lowerBound)
	(while (<= ?*i* ?upperBound)
			
		(if	(eq 0 (mod ?*i* ?n)) then 
			(bind ?*sum* (+ ?*sum* ?*i*))
		)
		
		; инкремент счётчика
		(bind ?*i* (+ ?*i* 1))
	)
	
	(return ?*sum*)
)
