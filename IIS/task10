; 10.  Поменять порядок следования цифр в заданном натуральном числе N на обратный, 
; удалив при этом из записи получаемого числа все вхождения цифры k.

(defglobal ?*nReversed* = 0)
(defglobal ?*lastValue* = 0)


(deffunction reverse(?number ?valueToRemove)
	; обнуление результата
	(bind ?*nReversed* 0)
	
	; пока есть цифры в числе
	(while (neq ?number 0)
	
		; читаем последнюю цифру числа ?number
		; записываем её в ?*lastValue*
		(bind ?*lastValue* (getLastNumber ?number))
		
		; если цифру не нужно удалять
		(if	(neq ?*lastValue* ?valueToRemove) then
		
			; добавляем в конец цисла nReversed последнюю цифру из number
			(bind ?*nReversed* (append ?*nReversed* ?*lastValue*))
		)
		
		; убираем одну цифру с конца number
		(bind ?number (div ?number 10))
			
	)
	
	(return ?*nReversed*)
)

; получение последней цифлы числа n
(deffunction getLastNumber(?n)
	(return (mod ?n 10))
)

; добавление цифры ?value в конец числа ?number
; если ?number = 0, то вернет ?value
(deffunction append(?number ?value)
	(return (+ (* ?number 10) ?value))	
)
