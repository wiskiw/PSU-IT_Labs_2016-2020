; 12. Подсчитать количество цифр в заданном целом числе n.

(defglobal ?*sum* = 0)

(deffunction numbersSum(?value)
	
	; обнуление результата
	(bind ?*sum* 0)
	
	; пока есть цифры в числе
	(while (neq ?value 0)
	
		; читаем последнюю цифру числа ?value
		; и суммируем
		(bind ?*sum* (+ ?*sum* (getLastNumber ?value)))
	
		; убираем одну цифру с конца value
		(bind ?value (div ?value 10))
			
	)
	
	(return ?*sum*)
)

; получение последней цифлы числа n
(deffunction getLastNumber(?n)
	(return (mod ?n 10))
)
